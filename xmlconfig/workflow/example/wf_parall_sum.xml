<work-flow name="wf_parall_sum"  dir="/example" desc="">
        <start name="start" to="fork" />
        
        <fork name="fork">
             <path to="a1" />
             <path to="a2" />
             <path to="a3" />
             <path to="a3_1" />
             <path to="a3_2" />
        </fork> 
        <action name="a1" host="127.0.0.1" desc = "产生1到10">
            <script>
                <content>
                <![CDATA[
                   #!/usr/bin/perl
                    my $i=0;
                    for(my $i=0;$i < 10; $i++){
                    sleep 2;
                    print $i . "\n";
                    }
                    ]]>
                </content>
            </script>
            <ok to="join_node"/>
        </action>
        <action name="a2" host="127.0.0.1" desc = "产生11到20">
