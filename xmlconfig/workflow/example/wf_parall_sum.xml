<work-flow name="wf_parall_sum"  dir="/example" desc="">
        <start name="start" to="s1" />
        <action name="s1" desc = "清理及创建目录">
            <script>
                <content>
                    <![CDATA[
                    rm -rf tmp/${stadate}
                    mkdir tmp/${stadate}
                    ]]>
                </content>
            </script>
            <ok to="fork"/>
        </action>
        
        <fork name="fork">
             <path to="a1" />
             <path to="a2" />
             <path to="a3" />
        </fork> 
        <action name="a1" host="127.0.0.1" desc = "产生1到10">
            <script>
                <content>
                    <![CDATA[
                    for i in `seq 1 10`
                    do 
                       sleep 2;echo $i;echo $i >> tmp/${stadate}/data.log
                    done
                    ]]>
                </content>
            </script>
            <ok to="join_node"/>
        </action>
        <action name="a2" host="127.0.0.1" desc = "产生11到20">
            <script>
                <content>
                    <![CDATA[
                    for i in `seq 11 20`
                    do 
                       sleep 2;echo $i;echo $i >> tmp/${stadate}/data.log
                    done
                    ]]>
                </content>
            </script>
            <ok to="join_node"/>
        </action>
        <action name="a3" host="127.0.0.1" desc = "产生21到30">
            <script>
                <content>
                    <![CDATA[
                    for i in `seq 21 30`
                    do 
                       sleep 2;echo $i;echo $i >> tmp/${stadate}/data.log
                    done
                    ]]>
                </content>
            </script>
            <ok to="join_node"/>
        </action>

        <join name="join_node" to="a4"/>

        <action name="a4" host="127.0.0.1" desc = "计算结果">
            <script>
                <content>
                    <![CDATA[
                    cat tmp/${stadate}/*.log | awk '{s+=$1} END{print s}'
                    ]]>
                </content>
            </script>
            <ok to="end"/>
        </action>
        <end name="end"/>
</work-flow>
