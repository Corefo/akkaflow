<work-flow name="wf_import_item" 
	mail-level = "W_SUCCESSED,W_FAILED,W_KILLED" 
	mail-receivers="15018735011@163.com,492005267@qq.com" dir="/example" desc="导入item数据">

	<start name="start" to="watch_log" />

	<action name="watch_log" retry-times="2" interval="8" timeout="500" host="127.0.0.1" desc = "监测日志文件">
	    <file-watcher>
	        <file dir="tmp/log_test/${stadate}">item_*.out</file> 
	        <size-warn-message enable="true" size-threshold="2MB"></size-warn-message> 
	    </file-watcher>
	    <ok to="fork"/>
	</action>

	<fork name="fork">
         <path to="clean_log" />
         <path to="sleep" />
    </fork> 

	<action name="clean_log" retry-times="1" interval="1" timeout="500" host="127.0.0.1" desc = "清洗日志">
		<shell>
             <command>tmp/clean_2.sh ${stadate}</command>
        </shell>
	    <ok to="join_node"/>
	</action>
 
	<action name="sleep" retry-times="1" interval="1" timeout="500" host="127.0.0.1" desc = "sleep for a while">
	    <script>
		    <content>
	           	<![CDATA[
	           	for i in `seq 1 10`
	           	do sleep 2;echo $i
	           	done
	           	]]>
           </content>
        </script>
	    <ok to="join_node"/>
	</action>

	<join name="join_node" to="import_2_mysql"/>

	<action name="import_2_mysql" retry-times="1" interval="1" timeout="500" host="127.0.0.1" desc = "join node">
		<shell>
             <command>tmp/import_2.sh ${stadate}</command>
        </shell>
	    <ok to="end"/>
	</action>

	<end name="end"/>
</work-flow>
